<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.outside2154.gamesense.fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/atk_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attack"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/atk_pb"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginVertical="20dp"
                android:backgroundTint="@android:color/white"
                android:progress="50"
                android:progressBackgroundTint="@android:color/darker_gray"
                android:progressTint="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/atk_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:text="TextView"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/intel_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intelligence"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/intel_pb"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginVertical="20dp"
                android:backgroundTint="@android:color/white"
                android:progress="50"
                android:progressBackgroundTint="@android:color/darker_gray"
                android:progressTint="@color/colorPrimaryDark" />
            <TextView
                android:id="@+id/intel_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:text="TextView"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/hth_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/hth_pb"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginVertical="20dp"
                android:backgroundTint="@android:color/white"
                android:progress="50"
                android:progressBackgroundTint="@android:color/darker_gray"
                android:progressTint="@color/colorPrimaryDark" />
            <TextView
                android:id="@+id/hth_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:text="TextView"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
